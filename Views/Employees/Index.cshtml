@model IEnumerable<ASP_Labb1.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Anställda</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Lägg till</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
	            <a class="badge text-bg-success" asp-action="Create" asp-controller="LeaveApplications" asp-route-id="@item.EmployeeId">Ansök ledighet</a>
                    <a class="badge text-bg-warning" asp-controller="LeaveApplications" asp-action="GetLeavesByEmpId" asp-route-id="@item.EmployeeId">Se ansökningar</a>

            </td>
        </tr>
}
    </tbody>
</table>
